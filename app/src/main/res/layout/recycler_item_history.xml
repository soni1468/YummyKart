<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:id="@+id/hisRelative1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp">

            <TextView
                android:id="@+id/textHisOrderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:text="Order No. : "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textHisDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingEnd="6dp"
                android:text="07-july-2017     05:30 PM"
                android:textStyle="bold" />

            <View
                android:id="@+id/hisMargin1"
                android:layout_width="match_parent"
                android:layout_height="0.001dip"
                android:layout_below="@+id/textHisOrderNo"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/hisRelative2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hisMargin1"
                android:layout_marginTop="4dp">

                <RelativeLayout
                    android:id="@+id/hisRelative3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp">

                    <TextView
                        android:id="@+id/textHisItemOnly"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:paddingEnd="14dp"
                        android:paddingStart="34dp"
                        android:text="Item"
                        android:textAlignment="textStart"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="#212121"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textHisQuantityOnly"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/textHisItem"
                        android:text="Qty"
                        android:textAlignment="center"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="#212121"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textHisAmountOnly"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/textHisQuantityOnly"
                        android:text="Amount"
                        android:textAlignment="center"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="#212121"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textHisItem"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textHisItemOnly"
                        android:layout_marginTop="4dp"
                        android:paddingEnd="4dp"
                        android:paddingStart="6dp"
                        android:text="Chicken Butter Masala\nPaneer Butter Masala"
                        android:textAlignment="textStart"
                        android:textColor="#212121"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textHisQuantity"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textHisItemOnly"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@+id/textHisItem"
                        android:text="3\n2"
                        android:textAlignment="center"
                        android:textColor="#212121"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textHisItemAmount"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textHisItemOnly"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@id/textHisQuantity"
                        android:text="₹ 600\n₹ 300"
                        android:textAlignment="center"
                        android:textColor="#212121"
                        android:textSize="15sp" />

                </RelativeLayout>

                <View
                    android:id="@+id/hisMargin2"
                    android:layout_width="match_parent"
                    android:layout_height="0.001dip"
                    android:layout_below="@+id/hisRelative3"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="-10dp"
                    android:background="#000000" />

                <RelativeLayout
                    android:id="@+id/hisRelative4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hisMargin2"
                    android:layout_marginTop="6dp"
                    android:background="#FFFFFF">

                    <TextView
                        android:id="@+id/textHisSubTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Sub Total    :       ₹900"
                        android:textColor="#616161"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/textHisTax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textHisSubTotal"
                        android:layout_marginStart="10dp"
                        android:text="GST (18%)  :   + ₹100"
                        android:textColor="#616161"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textHisDiscountAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textHisTax"
                        android:layout_marginStart="10dp"
                        android:text="Discount   :    - ₹100"
                        android:textSize="13sp"
                        android:textColor="#0C9C45" />

                    <View
                        android:id="@+id/hisMargin5"
                        android:layout_width="200dp"
                        android:layout_height="0.01dp"
                        android:layout_below="@+id/textHisDiscountAmount"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="3dp"
                        android:background="#212121" />

                    <TextView
                        android:id="@+id/textHisTotalAmt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hisMargin5"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="2dp"
                        android:text="Grand Total :  ₹900"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/butHisDiscount"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/round_but_style"
                        android:clickable="false"
                        android:text="40%"
                        android:textAlignment="center"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />


                </RelativeLayout>

                <View
                    android:id="@+id/hisMargin3"
                    android:layout_width="match_parent"
                    android:layout_height="0.001dip"
                    android:layout_below="@+id/hisRelative4"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/textHisCustDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hisMargin3"
                    android:layout_marginTop="4dp"
                    android:paddingEnd="6dp"
                    android:paddingStart="6dp"
                    android:text="Pranshu Soni\nMusallahpur, Nahar Par\nPost-Mahendru Patna-13\nLandmark : HP Gas Agency\n7504428223"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#212121"
                    android:textSize="14dp" />

                <View
                    android:id="@+id/hisMargin4"
                    android:layout_width="match_parent"
                    android:layout_height="0.001dip"
                    android:layout_below="@+id/textHisCustDetails"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/textHisStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hisMargin4"
                    android:layout_marginTop="4dp"
                    android:text="Status"
                    android:textAlignment="center"
                    android:textAppearance="?android:textAppearanceMedium" />


            </RelativeLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>