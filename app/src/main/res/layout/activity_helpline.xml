<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004D40"
    tools:context="com.example.pranshu.yummyrestaurant.HelplineActivity">

    <!--  <include
          android:id="@+id/app_bar"
          layout="@layout/app_bar_custom" />  -->

    <ImageView
        android:id="@+id/helplineImage"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@+id/app_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/logo_logo" />

    <ImageView
        android:id="@+id/helplineTitle"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/helplineImage"
        android:layout_centerHorizontal="true"
        android:background="@drawable/title" />

    <TextView
        android:id="@+id/helplineQuote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/helplineTitle"
        android:padding="6dp"
        android:text="order in cloud and delivered at doorstep!"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/helplineEmailUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/helplineQuote"
        android:layout_marginTop="55dp"
        android:text="Email us:"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/helplineEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/helplineEmailUs"
        android:layout_centerInParent="true"
        android:layout_marginTop="4dp"
        android:background="@null"
        android:onClick="SendEmail"
        android:text="yummykartindia@gmail.com"
        android:textAlignment="center"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/helplineContactUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/helplineEmail"
        android:layout_marginTop="30dp"
        android:text="Contact us directly:"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/helplinePhone1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/helplineContactUs"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:onClick="CallNum1"
        android:text="7008441708"
        android:textAlignment="center"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/helplinePhone2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/helplinePhone1"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:onClick="CallNum2"
        android:text="7064007719"
        android:textAlignment="center"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/helplineCopyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="4dp"
        android:text="CopyrightÂ© 2017 yummykart"
        android:textAlignment="center"
        android:textColor="#F5F5F5"
        android:textSize="18dp" />

</RelativeLayout>
